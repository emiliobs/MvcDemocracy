@model MvcDemocracy.Models.AddCandidateView

@{
    ViewBag.Title = "AddCAndidate";
}

<h2>Add Candidate to Voting....</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Voting</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(Model => Model.VotingId)

        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "Users", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", "[Select an Users.....]")
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Candidate" class="btn btn-primary" />
                @Html.ActionLink("Back to Voting", "Index", new {id=Model.VotingId }, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




