        @Html.ActionLink("Back to My Votings", "MyVotings", new { }, new { @class = "btn btn-success" })
    </div>
    </div>
<div class="col-md-6">       
            <h4>Candidates.</h4>
            @*pregunto si hay candidatos:*@
            @if (Model.MyCandidates.Count > 0)
            {
                <table class="table">
                    <tr>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Candidates[0].User.UserName)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.MyCandidates[0].User.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MyCandidates[0].User.Photo)
                        </th>
                        <th></th>
                    </tr>

                    @for (int i = 0; i < Model.MyCandidates.Count; i++)
                    {
                        <tr>
                            @*<td>
                                @Html.DisplayFor(modelItem => Model.Candidates[i].User.UserName)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => Model.MyCandidates[i].User.FullName)
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.MyCandidates[i].User.Photo))
                    {
                                    <img src="@Url.Content(Model.MyCandidates[i].User.Photo)" alt="Image" style="width:200px; height:200px;max-width:100%; height:auto" />
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Vote Candidate", "VoteForCandidate", new { candidateId = Model.MyCandidates[i].CandidateId, votingId = Model.MyCandidates[i].VotingId }, new { @class = "btn btn-primary", onclick = "return confirm('Are you sure to Vote for this Candidate.?');" })
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <h5>Not  Candidate added yet.</h5>
            }        
    </div>
</div>

